---
import "../styles/global.css";
---

<!doctype html>
<html lang="en" class="h-lvh">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>POLITEShop</title>
  </head>
  <body class="h-full bg-stone-900 text-stone-50 font-inter" data-domain={Astro.locals.polite.domain}>
    <slot />

    <script>
      import { actions } from "astro:actions";
      import type { WindowMessage } from "../../../shared";

      const politeDomain = (document.querySelector("[data-domain]")! as HTMLElement).dataset.domain;

      const message: WindowMessage = {
        type: "URL_PATH_CHANGED",
        payload: location.pathname,
      };
      window.top!.postMessage(message, `https://${politeDomain}.polite.edu.sg`);

      // TODO: Use MutationObserver when necessary
      for (const a of document.getElementsByTagName("a")) {
        if (a.hostname !== location.hostname) continue;

        a.hostname = `${politeDomain}.polite.edu.sg`;
        a.port = "";

        a.addEventListener("click", (e) => {
          e.preventDefault();
          location.pathname = a.pathname;
        });
      }

      const { data, error } = await actions.syncData();
      if (error) console.error(error);
    </script>
  </body>
</html>
